<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.cardview.widget.CardView
        android:layout_width="100dp"
        android:id="@+id/cardviewAvarInfo"
        android:layout_height="100dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:cardCornerRadius="50dp"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imgUserInfo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/person"/>
    </androidx.cardview.widget.CardView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cardviewAvarInfo"
        android:text="Dinh quang Dao"
        android:textSize="25sp"
        android:textColor="#000"
        android:textStyle="bold"
        android:textAllCaps="true"
        android:layout_marginTop="5dp"
        android:id="@+id/txtNameUserInfo" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txtNameUserInfo"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Thông tin người dùng:"
            android:textColor="#000"
            android:textSize="20sp"
            android:gravity="center_vertical"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal"
            android:weightSum="10">

            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginStart="16dp"
                android:layout_weight="1"
                android:scaleType="centerInside"
                android:scaleX="1.2"
                android:scaleY="1.2"
                android:src="@drawable/phone" />

            <TextView
                android:id="@+id/txtPhoneNumberInfo"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_weight="9"
                android:fontFamily="sans-serif-light"
                android:gravity="center_vertical"
                android:text="09321748234"
                android:textColor="#000"
                android:textSize="18sp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal"
            android:weightSum="10">

            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginStart="16dp"
                android:layout_weight="1"
                android:scaleType="centerInside"
                android:scaleX="1.2"
                android:scaleY="1.2"
                android:src="@drawable/email" />

            <TextView
                android:id="@+id/txtEmailInfo"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_weight="9"

                android:fontFamily="sans-serif-light"
                android:gravity="center_vertical"
                android:text="dao1299@gmail.com"
                android:textColor="#000"
                android:textSize="18sp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal"
            android:weightSum="10">
            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginStart="16dp"
                android:layout_weight="1"
                android:scaleType="centerInside"
                android:scaleX="1.2"
                android:scaleY="1.2"
                android:src="@drawable/nfavorite" />

            <TextView
                android:id="@+id/txtListFavorite"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_weight="9"
                android:fontFamily="sans-serif-light"
                android:gravity="center_vertical"
                android:text="Danh sách yêu thích"
                android:clickable="true"
                android:textStyle="bold"
                android:textColor="#000"
                android:textSize="18sp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal"
            android:weightSum="10">
            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginStart="16dp"
                android:layout_weight="1"
                android:scaleType="centerInside"
                android:scaleX="1.2"
                android:scaleY="1.2"
                android:src="@drawable/location_border" />
            <TextView
                android:id="@+id/txtListPostUser"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_weight="9"
                android:fontFamily="sans-serif-light"
                android:gravity="center_vertical"
                android:text="Danh sách đóng góp"
                android:clickable="true"
                android:textStyle="bold"
                android:textColor="#000"
                android:textSize="18sp" />
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal"
            android:weightSum="10">

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3.5" />
            <Button
                android:text="Sửa thông tin"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:textAllCaps="false"
                android:elevation="10dp"
                android:textSize="14sp"
                android:textColor="#fff"
                android:background="@drawable/btn_search"
                android:backgroundTint="#69F0AE"
                android:shadowColor="@color/black"
                android:id="@+id/btnChangeInfo"
                />
            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.4" />
            <Button
                android:id="@+id/btnChangePassword"
                android:layout_width="0dp"
                android:textColor="#fff"
                android:elevation="50dp"
                android:background="@drawable/btn_search"
                android:layout_height="wrap_content"
                android:textAllCaps="false"
                android:layout_weight="3"
                android:textSize="14sp"
                android:text="Đổi mật khẩu"/>
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>